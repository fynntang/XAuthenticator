{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "xauthenticator",
  "version": "0.1.0",
  "identifier": "io.xauthenticator.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "XAuthenticator",
        "label": "main",
        "width": 1366,
        "height": 768,
        "minWidth": 800,
        "minHeight": 600,
        "maxWidth": 1920,
        "maxHeight": 1080,
        "titleBarStyle": "Overlay",
        "center": true,
        "decorations": false,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "maximizable": false,
        "minimizable": false,
        "visible": true,
        "windowEffects": {
          "effects": [
            "hudWindow",
            "acrylic",
            "mica"
          ],
          "radius": 12
        }
      },
      {
        "title": "Settings",
        "label": "settings",
        "url": "/settings",
        "parent": "main",
        "width": 600,
        "height": 400,
        "titleBarStyle": "Overlay",
        "center": true,
        "decorations": false,
        "resizable": false,
        "fullscreen": false,
        "transparent": true,
        "maximizable": false,
        "minimizable": false,
        "visible": false,
        "windowEffects": {
          "effects": [
            "hudWindow",
            "acrylic",
            "mica"
          ],
          "radius": 12
        }
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/migrations"
    ]
  },
  "plugins": {}
}
