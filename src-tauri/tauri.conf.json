{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "XAuthenticator",
  "version": "0.1.0",
  "identifier": "XAuthenticator",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "withGlobalTauri": true,
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "Launch",
        "label": "launch",
        "url": "/launch",
        "width": 640,
        "height": 400,
        "center": true,
        "resizable": false,
        "decorations": false,
        "fullscreen": false,
        "visible": true
      },
      {
        "title": "XAuthenticator",
        "label": "main",
        "width": 1366,
        "height": 768,
        "center": true,
        "decorations": false,
        "resizable": true,
        "fullscreen": false,
        "visible": false
      },
      {
        "title": "Settings",
        "label": "settings",
        "url": "/settings",
        "width": 600,
        "height": 768,
        "center": true,
        "decorations": false,
        "resizable": true,
        "fullscreen": false,
        "visible": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' customprotocol: asset:",
        "connect-src": "ipc: http://ipc.localhost",
        "font-src": [
          "https://fonts.gstatic.com"
        ],
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "style-src": "'unsafe-inline' 'self' https://fonts.googleapis.com"
      },
      "capabilities": [
        "default",
        "desktop-capability",
        "mobile-capability"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}
